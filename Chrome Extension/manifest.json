{
  "name": "BPrivy",
  "version": "0.5",
  "description":"BPrivy Password Keychain. Personal Protected and Portable. Keep your encrypted passwords in your wallet/purse, keychain or on your phone, access from any computer!",
  "icons": {
	     "128": "icon128.png",
  	     "16": "icon16.png"
	   },
  "permissions": ["contextMenus", "tabs", "webRequest", "<all_urls>"],
  "background_page": "bp_Main.html",
  "content_scripts": [
	{
	"matches": ["<all_urls>"],
	"js": ["jquery.js", "jquery-ui.js", "bp_common.js", "bp_cs_platform_chrome.js", "bp_3db.js", "bp_cs.js"],
	"css": ["bp.css"]
///	"all_frames": true
	}
  ],
  "browser_action": {
	"default_icon": "icon16.png"
  },
  "offline_enabled": true
}
