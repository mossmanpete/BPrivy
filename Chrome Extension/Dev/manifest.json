{
  "name": "BPrivy",
  "version": "0.6.10",
  "manifest_version": 2,
  "minimum_chrome_version": "7",
  "content_security_policy": "default-src 'self'; connect-src 'self'; style-src 'self' 'unsafe-inline'",
  "description":"U-Wallet: Personal, Private and Portable Passwords. The U-Wallet storage is local (as in no cloud), Sync-able and physically mobile.",
  "icons": {
	     "128": "icons/icon128.png",
  	     "16": "icons/icon16.png"
	   },
  "permissions": ["contextMenus", "tabs", "webRequest", "webNavigation", "notifications"],
  "background": {"page": "bp_Main.html"},
  "content_scripts1": [
    {
    "matches": ["http://*/*", "https://*/*", "ftp://*/*"],
    "exclude_matches": ["*://chrome.google.com/webstore*"],
    "js": ["bp_cs_boot.cat.js"],
    "run_at": "document_idle",
    "all_frames": true
    }
  ],
  "content_scripts": [
    {
    "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file://*/*"],
    "exclude_matches": ["*://chrome.google.com/webstore*"],
    "js": ["tp/jquery.js",
           "tp/jquery-ui.js",
           "bp_cs_boot_head.js",
           "bp_cs.cat.js",
           "bp_cs_boot_stub.js"],
    "run_at": "document_idle",
    "css": ["bp.css"],
    "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "bp_panel.html"
  },
  "options_page": "bp_manage.html",
  "offline_enabled": true,
  "web_accessible_resources": [
    "icons/icon16.png",
    "tp/bootstrap/img/glyphicons-halflings.png",
    "tp/bootstrap/img/glyphicons-halflings-white.png",
    "tp/jquery.js",
    "tp/jquery-ui.js",
    "bp_cs.cat.js",
    "bp.css",
    "bp_cs_boot.cat.js"],
  "incognito": "spanning"
}
