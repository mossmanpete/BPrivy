{
  "name": "BPrivy",
  "version": "0.5.6",
  "manifest_version": 2,
  "minimum_chrome_version": "7", // For JSON.parse support
  "content_security_policy": "default-src 'self'; connect-src 'self'; style-src 'self' 'unsafe-inline'",
  "description":"BPrivy: Portable & Pluggable Passwords. Protected, syncable, mergable, movable, copyable, learnable!. Featuring patent pending UTeach, UMerge and UFill technologies",
  "icons": {
	     "128": "icons/icon128.png",
  	     "16": "icons/icon16.png"
	   },
  "permissions": ["contextMenus", "tabs", "webRequest", "<all_urls>"],
  "background": {"page": "bp_Main.html"},
  "content_scripts": [
	{
	"matches": ["<all_urls>", "https://chrome.google.com/*"],
	"js": ["tp/jquery.js", "tp/jquery-ui.js", "bp_error.js", "bp_common.js", "bp_traits.js", "bp_cs_platform_chrome.js", "bp_connector.js", "bp_w$.js", "bp_panel.js", "bp_cs.js"],
	"css": ["bp.css"]
	}
  ],
  "browser_action": {
	"default_icon": "icons/icon16.png"
  },
  "options_page": "bp_manage.html",
  "offline_enabled": true,
  "web_accessible_resources": [
    "icons/icon16.png",
    "tp/bootstrap/img/glyphicons-halflings.png",
    "tp/bootstrap/img/glyphicons-halflings-white.png"],
  "update_url": "https://sites.google.com/a/untrix.com/bprivy/downloads/updates.xml"
}
