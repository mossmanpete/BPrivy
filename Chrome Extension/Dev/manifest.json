{
  "name": "BPrivy",
  "version": "0.5.13",
  "manifest_version": 2,
  "minimum_chrome_version": "7",
  "content_security_policy": "default-src 'self'; connect-src 'self'; style-src 'self' 'unsafe-inline'",
  "description":"U-Wallet: Portable Passwords. Secure, syncable, mergable, movable, copyable, learnable!",
  "icons": {
	     "128": "icons/icon128.png",
  	     "16": "icons/icon16.png"
	   },
  "permissions": ["contextMenus", "tabs", "webRequest", "<all_urls>"],
  "background": {"page": "bp_Main.html"},
  "content_scripts": [
	{
	"matches": ["http://*/*", "https://*/*", "ftp://*/*", "file://*/*"],
    "js": ["tp/jquery.js", "bp_cs.cat.js"],
	"css": ["bp.css"],
	"all_frames": true,
	"run_at": "document_start"
	}
  ],
  "browser_action": {
	"default_icon": "icons/icon16.png"
  },
  "options_page": "bp_manage.html",
  "offline_enabled": true,
  "web_accessible_resources": [
    "icons/icon16.png",
    "tp/bootstrap/img/glyphicons-halflings.png",
    "tp/bootstrap/img/glyphicons-halflings-white.png",
    "bp_load_cs.js"]
}
