{
  "name": "BPrivy",
  "version": "0.5.3",
  "manifest-version": 1,
  "content_security_policy": "default-src 'self'; connect-src 'self'; style-src 'self' 'unsafe-inline'",
  "description":"BPrivy: Password Wallet. Keep encrypted-password files in your control. Autofill, store, move, copy, merge and sync!",
  "icons": {
	     "128": "icons/icon128.png",
  	     "16": "icons/icon16.png"
	   },
  "permissions": ["contextMenus", "tabs", "webRequest", "<all_urls>"],
  "background_page": "bp_Main.html",
  "content_scripts": [
	{
	"matches": ["<all_urls>", "http://*/*", "https://*/*"],
	"js": ["tp/json2.js", "tp/jquery.js", "tp/jquery-ui.js", "bp_error.js", "bp_common.js", "bp_cs_platform_chrome.js", "bp_connector.js", "bp_traits.js", "bp_w$.js", "bp_panel.js", "bp_cs.js"],
	"css": ["bp.css"]
	}
  ],
  "browser_action": {
	"default_icon": "icons/icon16.png"
  },
  "options_page": "bp_manage.html",
  "offline_enabled": true,
  "web_accessible_resources": [
    "icons/icon16.png",
    "tp/bootstrap/img/glyphicons-halflings.png",
    "tp/bootstrap/img/glyphicons-halflings-white.png"]
}
